<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Context\Expense\Domain\Expense" table="expense" repository-class="App\Context\Expense\Infrastructure\Persistence\Doctrine\DoctrineExpenseRepository">
        <id name="id" type="string" column="id" length="36">
            <generator strategy="NONE"/>
        </id>

        <field name="amount" column="amount" type="integer" />
        <field name="description" column="description" type="text" nullable="true" />
        <field name="dueDate" column="due_date" type="datetime" />
        <field name="paidAt" column="paid_at" type="datetime_immutable" nullable="true" />
        <field name="isActive" column="is_active" type="boolean" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />

        <many-to-one field="account" target-entity="App\Context\Account\Domain\Account" inversed-by="expenses">
            <join-column name="account_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <many-to-one field="type" target-entity="App\Context\Expense\Domain\ExpenseType" inversed-by="expenses">
            <join-column name="type_id" referenced-column-name="id" nullable="true" on-delete="RESTRICT" />
        </many-to-one>

        <many-to-one field="recurringExpense"
                     target-entity="App\Context\Expense\Domain\RecurringExpense"
                     inversed-by="expenses">
            <join-column name="recurring_id"
                         referenced-column-name="id"
                         nullable="true"
                         on-delete="SET NULL" />
        </many-to-one>

    </entity>
</doctrine-mapping>