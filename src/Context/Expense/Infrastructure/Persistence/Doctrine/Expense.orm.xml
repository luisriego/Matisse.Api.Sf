<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Context\Expense\Domain\Expense" table="expense" repository-class="App\Context\Expense\Domain\ExpenseRepository">
        <id name="id" type="uuid" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="amount" column="amount" type="integer" />
        <field name="description" column="description" type="text" nullable="true" />
        <field name="dueDate" column="due_date" type="datetime" />
        <field name="paidAt" column="paid_at" type="datetime_immutable" nullable="true" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="isActive" column="is_active" type="boolean" />
        <field name="residentUnitId" column="resident_unit_id" type="uuid" nullable="true" /> <!-- Corrected type to uuid -->

        <many-to-one field="account" target-entity="App\Context\Account\Domain\Account" inversed-by="expenses">
            <join-column name="account_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <many-to-one field="type" target-entity="App\Context\Expense\Domain\ExpenseType" inversed-by="expenses">
            <join-column name="expense_type_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <many-to-one field="recurringExpense" target-entity="App\Context\Expense\Domain\RecurringExpense" inversed-by="expenses">
            <join-column name="recurring_expense_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </entity>

</doctrine-mapping>