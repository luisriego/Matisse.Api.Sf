<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Context\Income\Domain\Income" table="income" repository-class="App\Context\Income\Infrastructure\Persistence\Doctrine\DoctrineIncomeRepository" >
        <id name="id" type="string" column="id" length="36">
            <generator strategy="NONE"/>
        </id>
        <field name="amount" column="amount" type="integer" />
        <field name="dueDate" column="due_date" type="datetime" />
        <field name="paidAt" column="paid_at" type="datetime_immutable" nullable="true" />
        <field name="isActive" column="is_active" type="boolean" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="description" column="description" type="text" nullable="true" />

        <many-to-one field="residentUnit" target-entity="App\Context\ResidentUnit\Domain\ResidentUnit" inversed-by="incomes">
            <join-column name="resident_unit_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <many-to-one field="incomeType" target-entity="App\Context\Income\Domain\IncomeType" inversed-by="incomes">
                <join-column name="type_id" referenced-column-name="id" nullable="true" on-delete="RESTRICT" />
        </many-to-one>
    </entity>
</doctrine-mapping>